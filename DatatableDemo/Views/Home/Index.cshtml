
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="col-lg-8 col-lg-push-2">
    <table id="table1" class="table table-striped table-bordered">

        <thead>
            <tr>
                <th></th>
                <th>
                    AssessmentId
                </th>
                <th>
                    HDescription
                </th>
                <th>
                    PermitGroupId
                </th>
                <th>
                    UserId
                </th>

                <th>
                    Area
                </th>
                <th>
                    TermsId
                </th>
            </tr>

        </thead>

    </table>



</div>


<script type="text/javascript">

    $(function () {
        var table = $('#table1').DataTable({
            "scrollX": false,
            "serverSide": false,
            "processing": true,
            "autoWidth": false,
            "pageLength": 10,//首次加载的数据条数
            "ajax": {
                "url": '@Url.Action("GetParentData", "Home")',
                "type": 'POST',
                "data": function (d) {
                    //d.userId = -1;
                    //d.IsOwn = false;
                }
            },
            "columns": [
            {
                "className": 'details-control',
                "orderable": false,
                "data": null,
                "defaultContent": ''
            },
            { "data": "AssessmentId" },
            { "data": "HDescription" },
            { "data": "PermitGroupId" },
            { "data": "UserId" },
            { "data": "Area" },
            { "data": "TermsId" }
            ],
            //"columnDefs": [
            //{
            //    "targets": [0],
            //    "visible": false,
            //    "searchable": false
            //}],
            "order": [],
            "pagingType": "full_numbers"
            //'fnServerData': function ( sSource, aoData, fnCallback ) {
            //    alert('121')
            //}
        });



        $('#table1 tbody').on('click', 'td.details-control', function () {
            //$('#TableID').find('tbody').find('tr:eq(4)').find('td:lt(2)')
            //var child = table.row(this).child;
            //if (child.isShown())
            //{
            //    child.hide();
            //}


            var tr = $(this).closest('tr');
            var row = table.row(tr);

            if (row.child.isShown()) {
                // This row is already open - close it
                row.child.hide();
                tr.removeClass('shown');
            }
            else {
                // Open this row
                row.child.show();
                var data = row.data();
                if (GetSubTableRowCount(data.AssessmentId)) {
                    row.child(subFormat(data)).show();
                    CreateSubTable(data.AssessmentId, data.UserId);
                    tr.addClass('shown');
                } else {
                    $('#subTable_' + data.AssessmentId).DataTable().ajax.url('@Url.Action("GetSubData", "Home")').load();
                    tr.addClass('shown');
                }
            }
        });


        function subFormat(d) {

            return '<table id="subTable_' + d.AssessmentId + '" class="table table-striped table-bordered">' +

                  '<thead>' +
                     '<tr>' +
                          //'<th></th>' +
                          '<th>title</th>' +
                          '<th>Id</th>' +
                          '<th>agentCode</th>' +
                          '<th>CompanyNameCh</th>' +
                          '<th>AssessmentId</th>' +
                          '<th>UserId</th>' +
                          '<th>Score</th>' +
                          '<th>Weighting</th>' +
                     '</tr>' +
                  '</thead>' +
                  '</table>';
        }

        function GetSubTableRowCount(assessmentId) {
            var table = $('#subTable_' + assessmentId).DataTable();
            var info = table.page.info();
            return info == undefined;
        }
        
        function CreateSubTable(assessmentId, userId) {
            var table = $('#subTable_' + assessmentId).DataTable({
                "scrollX": false,
                "serverSide": false,
                "processing": true,
                "autoWidth": false,
                "pageLength": 10,//首次加载的数据条数
                "ajax": {
                    "url": '@Url.Action("GetSubData", "Home")',
                    "type": 'POST',
                    "data": function (d) {
                        d.AssessmentId = assessmentId;
                        d.UserId = userId;
                    }
                },
                "columns": [
                //{
                //    "className": 'details-control',
                //    "orderable": false,
                //    "data": null,
                //    "defaultContent": ''
                //},
                { "data": "title" },
                { "data": "Id" },
                { "data": "agentCode" },
                { "data": "CompanyNameCh" },
                { "data": "AssessmentId" },
                { "data": "UserId" },
                { "data": "Score" },
                { "data": "Weighting" }
                ],
                "columnDefs": [
                {
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
                "order": [[0,'asc']],
                "pagingType": "full_numbers",
                "drawCallback": function (settings) {
                    var api = this.api();
                    var rows = api.rows({ page: 'current' }).nodes();
                    var last = null;

                    console.log(api.rows({ page: 'current' }).data());

                    api.column(0, { page: 'current' }).data().each(function (group, i) {

                        if (last !== group) {
                            $(rows).eq(i).before(
                                '<tr class="group"><td colspan="5">' + group + '</span></td></tr>'
                            );

                            last = group;
                        }
                    });

                }

            });

            $('#subTable_' + assessmentId + ' tbody').on('click', 'tr', function () {
                //var table = $('#subTable_' + assessmentId).DataTable();
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                }
                else {
                    table.$('tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });

            // Order by the grouping
            $('#subTable_' + assessmentId + ' tbody').on('click', 'tr.group', function () {
                var currentOrder = table.order()[0];
                if (currentOrder[0] === 0 && currentOrder[1] === 'asc') {
                    table.order([0, 'desc']).draw();
                }
                else {
                    table.order([0, 'asc']).draw();
                }
               // table.order([0, 'desc']).draw();

            });

        }



    })


</script>